{
  "name": "@nftbeats/backend",
  "version": "0.0.1",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "run-p dev:*",
    "dev:hasura": "hasura console --no-browser",
    "dev:watch": "npm-watch",
    "generate": "run-p generate:*",
    "generate:graphql": "graphql-codegen --config codegen.yml",
    "generate:orm": "sequelize-auto --host localhost --user postgres --pass postgrespassword --port 5432 --output ./generated/entity --dialect postgres --database postgres --lang ts --caseModel p --caseProp c --caseFile k --schema public --views --singularize",
    "build": "tsc"
  },
  "watch": {
    "build:graphql": {
      "patterns": [
        "./metadata"
      ],
      "extensions": [
        "yaml",
        "graphql"
      ],
      "runOnChangeOnly": true
    },
    "build:orm": {
      "patterns": [
        "./migrations"
      ],
      "extensions": [
        "sql"
      ],
      "runOnChangeOnly": true
    }
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^2.8.0",
    "@graphql-codegen/typescript": "^2.7.1",
    "@graphql-codegen/typescript-operations": "^2.5.1",
    "@graphql-codegen/typescript-react-apollo": "^3.3.1",
    "@types/express": "^4.17.14",
    "graphql": "^16.5.0",
    "hasura-cli": "^2.8.4",
    "sequelize-auto": "^0.8.8"
  },
  "dependencies": {
    "@apollo/client": "^3.7.1",
    "bluebird": "^3.7.2",
    "express": "^4.18.2",
    "pg": "^8.8.0",
    "sequelize": "^6.25.5"
  }
}
